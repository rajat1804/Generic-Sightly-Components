<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <heading
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Heading"
                        name="./heading"
                        xtype="textfield"/>
                    <background-image
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Image"
                        name="./backgroundImage"
                        rootPath="/content/dam"
                        xtype="pathfield"/>
                    <message
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner message"
                        name="./message"
                        xtype="textarea"/>
                    <multi
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Add Glossary Terms"
                        name="./questionMap"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            layout="form"
                            xtype="customMultiPanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <call-to-action
                                    jcr:primaryType="cq:Widget"
                                    dName="callToAction"
                                    fieldLabel="Enter the button text:"
                                    xtype="textfield"/>
                                <call-to-action-path
                                    jcr:primaryType="nt:unstructured"
                                    dName="callToActionPath"
                                    fieldLabel="Choose the button path:"
                                    xtype="pathfield"/>
                            </items>
                        </fieldConfig>
                    </multi>
                    <text-align
                        jcr:primaryType="cq:Widget"
                        fieldLabel="choose the text and button alignment:"
                        name="./talign"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <centre
                                jcr:primaryType="cq:Widget"
                                text="centre"
                                value="centre"/>
                            <right
                                jcr:primaryType="cq:Widget"
                                text="right"
                                value="right"/>
                            <left
                                jcr:primaryType="cq:Widget"
                                text="left"
                                value="left"/>
                        </options>
                    </text-align>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
